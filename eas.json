{
  "cli": {
    "version": ">= 3.0.0"
  },
  "build": {
    "production": {
      "android": {
        "buildType": "apk"
      }
    },
    "adhoc": {
      "ios": {
        "credentialsSource": "local",
        "distribution": "internal",
        "developmentClient": false,
        "autoIncrement": false,
        "simulator": false
      }
    },
    "preview": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": false,
        "enterpriseProvisioning": "adhoc",
        "credentialsSource": "remote"
      }
    }
  }
}